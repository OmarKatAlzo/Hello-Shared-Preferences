<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/count_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/regular_dimen"
        android:layout_weight="1"
        android:background="@color/default_background"
        android:gravity="center"
        android:text="@string/zero"
        android:textColor="@color/white"
        android:textSize="72sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/regular_dimen">

        <Button
            android:id="@+id/black_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:onClick="changeBackground"
            android:padding="@dimen/regular_dimen"
            android:text="@string/black_button"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/red_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/red"
            android:onClick="changeBackground"
            android:padding="@dimen/regular_dimen"
            android:text="@string/red_button"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/blue_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue"
            android:onClick="changeBackground"
            android:padding="@dimen/regular_dimen"
            android:text="@string/blue_button"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/green_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green"
            android:onClick="changeBackground"
            android:padding="@dimen/regular_dimen"
            android:text="@string/green_button"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/regular_dimen">

        <Button
            android:id="@+id/count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addToCount"
            android:text="@string/count_button"
            android:textSize="18sp" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="resetCounter"
            android:text="@string/reset_button"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>